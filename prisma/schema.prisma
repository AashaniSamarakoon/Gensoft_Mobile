generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model MobileAppUser {
  id                String           @id @default(cuid())
  mainErpUserId     String           @unique // Reference to main ERP system user ID
  email             String           @unique
  name              String
  phone             String?
  username          String           @unique
  
  // Registration process fields
  qrCodeData        String?          // Temporary storage for QR code data
  emailVerified     Boolean          @default(false)
  emailVerificationCode String?      // Temporary verification code
  emailVerificationExpiry DateTime?  // Expiry time for verification code
  passwordVerified  Boolean          @default(false)
  mobilePassword    String?          // Hashed mobile app password
  
  // Account status
  isActive          Boolean          @default(true)
  isRegistered      Boolean          @default(false) // Completed full registration process
  isLoggedOut       Boolean          @default(false) // User has explicitly logged out
  
  // Security settings
  lastLoginAt       DateTime?
  lastLogoutAt      DateTime?        // Track when user logged out
  lastPasswordCheck DateTime?
  requiresReauth    Boolean          @default(false) // Force re-authentication
  
  // Device information
  deviceInfo        String?          // Store device details for security as JSON string
  
  // Timestamps
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  
  // Relations
  sessions          UserSession[]
  refreshTokens     RefreshToken[]
  savedAccounts     SavedAccount[]  // Devices that have this user saved
  createdIOUs       IOU[]          @relation("CreatedBy")
  receivedIOUs      IOU[]          @relation("ReceivedBy")

  @@map("mobile_app_users")
}

model UserSession {
  id              String         @id @default(cuid())
  userId          String
  user            MobileAppUser  @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Session details
  accessToken     String         @db.Text
  sessionId       String         @unique
  deviceId        String?        // Unique device identifier
  deviceInfo      String?        // Device details (OS, version, etc.) as JSON string
  ipAddress       String?
  userAgent       String?
  
  // Session management
  isActive        Boolean        @default(true)
  lastActivityAt  DateTime       @default(now())
  expiresAt       DateTime
  
  // Quick login settings
  quickLoginEnabled Boolean      @default(true)
  quickLoginExpiresAt DateTime?  // Quick login validity period
  
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@map("user_sessions")
}

model RefreshToken {
  id              String         @id @default(cuid())
  userId          String
  user            MobileAppUser  @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  token           String         @db.Text
  sessionId       String         // Link to user session
  
  isActive        Boolean        @default(true)
  expiresAt       DateTime
  
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@map("refresh_tokens")
}

model QRCodeSession {
  id              String    @id @default(cuid())
  qrToken         String    @unique // Unique token for QR code
  mainErpUserId   String    // User ID from main ERP system
  userEmail       String
  userName        String
  userPhone       String?
  
  // QR Code data
  qrData          String    @db.Text // Complete user data from main ERP as JSON string
  
  // Session management
  isUsed          Boolean   @default(false)
  expiresAt       DateTime  // QR code expiry (e.g., 5 minutes)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("qr_code_sessions")
}

model EmailVerification {
  id                String    @id @default(cuid())
  email             String
  verificationCode  String
  attempts          Int       @default(0)
  maxAttempts       Int       @default(3)
  isUsed            Boolean   @default(false)
  expiresAt         DateTime  // Usually 15 minutes
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("email_verifications")
}

model MiddlewareLog {
  id              String    @id @default(cuid())
  operation       String    // Type of operation (user_verification, password_check, etc.)
  mainErpUserId   String?   // User ID from main ERP
  requestData     String?   @db.Text // Request sent to main ERP as JSON string
  responseData    String?   @db.Text // Response from main ERP as JSON string
  status          String    // SUCCESS, FAILED, TIMEOUT, etc.
  errorMessage    String?
  responseTime    Int?      // Response time in ms
  
  createdAt       DateTime  @default(now())

  @@map("middleware_logs")
}

model IOU {
  id          String     @id @default(cuid())
  amount      Decimal    @db.Decimal(10, 2)
  currency    String     @default("USD")
  description String?
  dueDate     DateTime?
  status      IOUStatus  @default(PENDING)
  
  // Relationships
  createdById String
  createdBy   MobileAppUser   @relation("CreatedBy", fields: [createdById], references: [id])
  
  receivedById String
  receivedBy   MobileAppUser   @relation("ReceivedBy", fields: [receivedById], references: [id])
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  paidAt      DateTime?

  @@map("ious")
}

model Proof {
  id          String      @id @default(cuid())
  description String
  date        DateTime
  category    String      // 'Bill', 'Invoice', 'Receipt', 'Delivery Photo', 'Proof of Delivery', etc.
  amount      Decimal?    @db.Decimal(10, 2)
  notes       String?     @db.Text
  attachments String?     @db.Text // JSON array of file URLs
  status      ProofStatus @default(DRAFT)
  
  // User information
  userId      String?     // Mobile app user ID
  employeeId  String?     // Employee ID from main ERP
  jobNumber   String?     // Associated job number
  customer    String?     // Customer name
  
  // Timestamps
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@map("proofs")
}

model Settlement {
  id            String            @id @default(cuid())
  payee         String
  module        String?
  jobNumber     String?
  customer      String?
  refNo         String
  iouAmount     Decimal           @db.Decimal(10, 2)
  returnAmount  Decimal           @default(0) @db.Decimal(10, 2)
  utilized      Decimal           @db.Decimal(10, 2)
  tax           Decimal           @default(0) @db.Decimal(10, 2)
  vat           Decimal           @default(0) @db.Decimal(10, 2)
  description   String?           @db.Text
  costCenter    String?
  status        SettlementStatus  @default(DRAFT)
  
  // User information
  userId        String?           // Mobile app user ID
  employeeId    String?           // Employee ID from main ERP
  
  // Timestamps
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  submittedAt   DateTime?
  approvedAt    DateTime?
  
  @@map("settlements")
}

model Module {
  id          String    @id @default(cuid())
  name        String    @unique
  displayName String
  description String?   @db.Text
  isActive    Boolean   @default(true)
  sortOrder   Int       @default(0)
  
  // Relations
  approvals   Approval[]
  
  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@map("modules")
}

model Approval {
  id          String         @id @default(cuid())
  itemType    String         // 'iou', 'proof', 'settlement', 'task'
  itemId      String         // ID of the item being approved
  moduleId    String?        // Reference to module
  module      Module?        @relation(fields: [moduleId], references: [id])
  title       String
  description String?        @db.Text
  amount      Decimal?       @db.Decimal(10, 2)
  requestedBy String         // User who requested approval
  assignedTo  String?        // User assigned to approve
  status      ApprovalStatus @default(PENDING)
  priority    String         @default("MEDIUM") // 'LOW', 'MEDIUM', 'HIGH', 'URGENT'
  
  // Job related info
  jobNumber   String?
  customerPayee String?
  refNo       String?
  blNo        String?
  invNo       String?
  
  // Approval details
  approvedBy  String?        // User who approved/rejected
  comments    String?        @db.Text
  approvedAt  DateTime?
  
  // Timestamps
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  
  @@map("approvals")
}

model Task {
  id          String     @id @default(cuid())
  title       String
  description String?    @db.Text
  status      TaskStatus @default(TODO)
  priority    String     @default("MEDIUM") // 'LOW', 'MEDIUM', 'HIGH', 'URGENT'
  category    String?    // 'delivery', 'pickup', 'inspection', 'documentation', etc.
  
  // Assignment
  assignedTo  String?    // User assigned to task
  assignedBy  String?    // User who assigned the task
  
  // Task details
  dueDate     DateTime?
  completedAt DateTime?
  estimatedHours Int?
  actualHours Int?
  
  // Location and job info
  jobNumber   String?
  customer    String?
  location    String?
  coordinates String?    // JSON string with lat/lng
  
  // User information
  userId      String?    // Mobile app user ID
  employeeId  String?    // Employee ID from main ERP
  
  // Timestamps
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@map("tasks")
}

enum IOUStatus {
  PENDING
  PAID
  CANCELLED
  OVERDUE
}

enum ProofStatus {
  DRAFT
  SUBMITTED
  APPROVED
  REJECTED
}

enum SettlementStatus {
  DRAFT
  SUBMITTED
  APPROVED
  REJECTED
  PAID
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  CANCELLED
  ON_HOLD
}

// New model for tracking saved accounts with device details
model SavedAccount {
  id              String    @id @default(cuid())
  userId          String    // Reference to MobileAppUser.id
  user            MobileAppUser @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Device Information
  deviceId        String    // Unique device identifier
  deviceName      String?   // Device name/model
  deviceType      String?   // iOS/Android/Web
  deviceOS        String?   // Operating system version
  appVersion      String?   // App version when saved
  
  // Login History
  firstSavedAt    DateTime  @default(now())
  lastAccessedAt  DateTime  @default(now())
  accessCount     Int       @default(1)
  
  // Device Settings
  biometricEnabled Boolean  @default(false)
  quickLoginEnabled Boolean @default(true)
  
  // Security
  lastTokenRefresh DateTime?
  isActive        Boolean   @default(true)
  
  // Metadata
  userAgent       String?   // Browser/app user agent
  ipAddress       String?   // IP address when saved
  location        String?   // General location (city/country)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@unique([userId, deviceId]) // One record per user per device
  @@map("saved_accounts")
}
